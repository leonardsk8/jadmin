<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>servletIndex</servlet-name>
        <servlet-class>com.servlets.servletIndex</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletHome</servlet-name>
        <servlet-class>com.servlets.servletHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletSongsItem</servlet-name>
        <servlet-class>com.servlets.servletSongsItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletItem</servlet-name>
        <servlet-class>com.servlets.servletItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletChat</servlet-name>
        <servlet-class>com.servlets.servletChat</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletUnVetoed</servlet-name>
        <servlet-class>com.servlets.servletUnVetoed</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletNotify</servlet-name>
        <servlet-class>com.servlets.servletNotify</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>servletReloads</servlet-name>
        <servlet-class>com.servlets.servletReloads</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>servletIndex</servlet-name>
        <url-pattern>/servletIndex</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletHome</servlet-name>
        <url-pattern>/servletHome</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletSongsItem</servlet-name>
        <url-pattern>/servletSongsItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletItem</servlet-name>
        <url-pattern>/servletItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletChat</servlet-name>
        <url-pattern>/servletChat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletUnVetoed</servlet-name>
        <url-pattern>/servletUnVetoed</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletNotify</servlet-name>
        <url-pattern>/servletNotify</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>servletReloads</servlet-name>
        <url-pattern>/servletReloads</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>servletIndex</welcome-file>
    </welcome-file-list>
</web-app>
